@model SiccoApp.Models.SelectUserRolesViewModel

@{
    ViewBag.Title = "User Roles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("UserRoles", "Account", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    @Html.AntiForgeryToken()

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Roles para el Usuario @Html.DisplayFor(model => model.UserName)</h3>
                </div>
                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Roles Disponibles <small><!--detalle subtitulo--></small></h2>
                                <div class="clearfix"></div>
                            </div>

                            <div class="x_content">

                                <table class="table table-striped responsive-utilities jambo_table bulk_action">
                                    <thead>
                                        <tr class="headings">
                                            <th class="column-title"></th>
                                            <th class="column-title no-link last">
                                                <span class="nobr">Rol</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @Html.EditorFor(model => model.Roles)
                                    </tbody>
                                </table>

                            </div>

                            <div class="nav navbar-right panel_toolbox">
                                <input type="submit" value="@Resources.Save" class="btn btn-success" />
                            </div>

                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Account")';return false;">@Resources.BackToList</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

