@model SiccoApp.Models.AssignedDocumentsViewModel

@{
    ViewBag.Title = @Resources.AssignedDocuments;
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>@Resources.AssignedDocuments</h3>
            </div>
            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>@Resources.EtyBusinessType : @Html.DisplayFor(model => model.BussinessTypeDescription)<small></small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("DocumentsCreate", "BusinessTypes", new {businessTypeID = Model.BussinessTypeID })'">@Resources.ToAssignDocumentation</button>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>

                        <div class="x_content">

                            <!--<p>Add class <code>bulk_action</code> to table for bulk actions options on row select</p>-->


                            <table class="table table-striped responsive-utilities jambo_table bulk_action">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">@Resources.CodDocumentationName </th>
                                        <th class="column-title">@Resources.DescDocumentationName </th>
                                        <th class="column-title">@Resources.DocEntityType </th>
                                        <th class="column-title">@Resources.Periodicity </th>
                                        <th class="column-title">@Resources.RestrictAccess </th>
                                        <th class="column-title no-link text-right">
                                            <span class="nobr">Acciones</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.DocumentationBusinessTypes)
                                    {
                                        <tr class="odd pointer">
                                            <td class=" ">@Html.DisplayFor(modelItem => item.Documentation.DocumentationCode) </td>
                                            <td class=" ">@Html.DisplayFor(modelItem => item.Documentation.Description) </td>
                                            <td class=" ">@Html.DisplayFor(modelItem => item.Documentation.EntityType.Description) </td>
                                            <td class=" ">@Html.DisplayFor(modelItem => item.DocumentationPeriodicity.Description) </td>
                                            <td class=" ">@Html.DisplayFor(modelItem => item.RestrictAccess) </td>
                                            <td class="a-center a-center text-right">
                                                @Html.ActionLink(@Resources.Edit, "DocumentsEdit", new { documentationBusinessTypeID = item.DocumentationBusinessTypeID, businessTypeID = item.BusinessTypeID }) |
                                                @Html.ActionLink(@Resources.Delete, "DocumentsDelete", new { documentationBusinessTypeID = item.DocumentationBusinessTypeID, businessTypeID = item.BusinessTypeID })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="nav navbar-right panel_toolbox">
                            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("DocumentsCreate", "BusinessTypes", new {businessTypeID = Model.BussinessTypeID })'">@Resources.ToAssignDocumentation</button>
                        </div>

                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "BusinessTypes")';return false;">@Resources.BackToList</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
