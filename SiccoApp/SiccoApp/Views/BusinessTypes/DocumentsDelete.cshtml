@model SiccoApp.Models.EditAssignDocumentViewModel

@{
    ViewBag.Title = @Resources.DocumentsDelete;
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>@Resources.EtyDocumentation</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@Resources.DocumentsDelete<small>@Resources.AskToDelete</small></h2>
                        <ul class="nav navbar-right panel_toolbox"></ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="form-horizontal form-label-left">
                            <!--FORM-->
                            <div class="form-group">
                                @Html.LabelFor(model => model.DocumentationDesc, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.EditorFor(model => model.DocumentationDesc, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.DocumentationPeriodicity.Description, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.EditorFor(model => model.DocumentationPeriodicity.Description, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.RestrictAccess, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.EditorFor(model => model.RestrictAccess, new { htmlAttributes = new { @disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="submit" class="btn btn-success">@Resources.Delete</button>
                                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AssignedDocuments", "BusinessTypes", new { id = Model.BusinessTypeID })';return false;">@Resources.BackToList</button>
                                    </div>
                                </div>
                            }
                        </div> <!--FORM-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
