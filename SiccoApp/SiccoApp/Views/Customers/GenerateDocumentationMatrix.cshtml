@model SiccoApp.Persistence.Customer

@{
    ViewBag.Title = "Documentation Matrix";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>@Resources.EtyCustomer</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Generacion de la Matriz de Documentacion <small><!--subtitulo--></small></h2>
                        <ul class="nav navbar-right panel_toolbox"></ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="form-horizontal form-label-left">
                            <!--FORM-->
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.TaxIdNumber, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.EditorFor(model => model.TaxIdNumber, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Descripcion", htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    A continuacion se generara la Matriz de documentacion para el Cliente seleccionado.
                                    Todo documento o Rubro que el Cliente halla creado o modificado será eliminado.
                                    <br />
                                    Esta generacion, solo podra ser realizada si aun no se cuenta con Presentaciones realizadas.
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="submit" class="btn btn-success">@Resources.Generate</button>
                                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Customers")';return false;">@Resources.BackToList</button>
                                    </div>
                                </div>
                            }
                        </div> <!--FORM-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
