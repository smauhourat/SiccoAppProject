@model SiccoApp.Models.PresentationViewModel 

@{
    ViewBag.Title = Resources.EtyPresentation;
    Layout = "~/Views/Shared/_LayoutContractor.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>@Resources.EtyPresentation</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>@Resources.PresentationDelete <small>@Resources.AskToDelete</small></h2>
                        <ul class="nav navbar-right panel_toolbox"></ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="form-horizontal form-label-left">
                            <!--FORM-->
                            <div class="form-group">
                                @Html.LabelFor(model => model.PresentationDate, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.EditorFor(model => model.PresentationDate, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PresentationStatus, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.EditorFor(model => model.PresentationStatus, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Observations, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    @Html.EditorFor(model => model.Observations, new { htmlAttributes = new { @class = "form-control col-md-7 col-xs-12", @disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.DocumentFiles, htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    
                                    <a href="@Model.DocumentFiles" target="_blank">
                                        @Resources.DownloadDocument
                                    </a>

                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("customerID", (object)ViewBag.CustomerID)
                                @Html.Hidden("contractorID", (object)ViewBag.CustomerID)
                                @Html.HiddenFor(model => model.DocumentFiles)
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="submit" class="btn btn-success">@Resources.Delete</button>
                                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "ContractorRequirements")';return false;">@Resources.BackToList</button>
                                    </div>
                                </div>
                            }
                        </div> <!--FORM-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
