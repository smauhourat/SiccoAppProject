@model SiccoApp.Models.AdminCustomerLoginViewModel 

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Sicco - " + Resources.LoginCustomersTitle;
}
<div class="animate form login_form">
    <section class="login_content">

        @using (Html.BeginForm("Login", "AdminCustomer", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
            <h1>@Resources.LoginCustomersTitle</h1>
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = Resources.UsernameLogin, @Value = "customer1" })
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
            </div>
            <div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = Resources.PasswordLogin, @Value = "" })
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
            </div>
            <div class="clearfix"></div>
            <div class="col-md-offset-3 col-md-10">
                <input type="submit" value="@Resources.LogIn" class="btn btn-primary" />
            </div>
            <div class="col-md-6">
                @Html.ActionLink("Recuperar contraseña", "ForgotPassword", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            </div>
            <div class="clearfix"></div>
            <div class="separator">
                <footer style="margin-left:0px">
                    <div>
                        <img class=".img-responsive" src="~/Content/images/logocolor.png" height="30px">
                        <p>@Resources.CopyRightFooter</p>
                    </div>
                </footer>
            </div>
        }

</section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
